{

    "version": "2.0.0",

    "tasks": [

        {

            "label": "build",

            "type": "shell",

            "command": "g++",

            "args": [

                "${file}",

                //"-std=c++23",

                "-o${workspaceRoot}\\${fileBasenameNoExtension}.exe"

            ],

            "group": {

                "kind": "build",

                "isDefault": true

            },

            "presentation": {

                "reveal": "silent"

            }

        },

        {

            "label": "run",

            "type": "shell",

            "command": "${workspaceRoot}\\${fileBasenameNoExtension}.exe",

            "dependsOn": [

                "build"

            ],

            "presentation": {

                "echo": true,

                "reveal": "always",

                "focus": true,

                "panel": "shared",

                "showReuseMessage": true,

                "clear": true

            },

            "group": "build"

        }

    ]

} 